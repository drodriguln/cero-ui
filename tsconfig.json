{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/"
  ]
}